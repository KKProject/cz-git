{
  "version": "1.1.2",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*",
    "packages/@cz-git/*"
  ],
  "command": {
    "version": {
      "allowBranch": [
        "main",
        "next_*",
        "dev_*",
        "fix_*"
      ],
      "conventionalCommits": true,
      "exact": true,
      "ignoreChanges": [
        "**/*.md"
      ],
      "message": "chore(release): publish %s"
    }
  }
}